<% if @integration.fully_connected? %>
  <% if @integration.version_control? || @integration.ci_cd? %>
    <table class="table-auto w-full">
      <!-- Table header -->
      <thead class="text-xs font-semibold uppercase text-slate-500 bg-slate-50 border-t border-b border-slate-200">
      <tr>
        <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
          Active Code Repo
        </th>
        <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
          Working Branch
        </th>
      </tr>
      </thead>
      <tbody class="text-sm divide-y divide-slate-200">
      <tr>
        <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
          <%= @integration.active_code_repo %>
        </td>

        <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
          <% if @integration.ci_cd? %>
            Release branches will be auto-generated and the CI/CD will run against that.
          <% else %>
            <%= @integration.working_branch %>
          <% end %>
        </td>
      </tr>
      </tbody>
    </table>
  <% elsif @integration.notification? %>
    <table class="table-auto w-full">
      <!-- Table header -->
      <thead class="text-xs font-semibold uppercase text-slate-500 bg-slate-50 border-t border-b border-slate-200">
      <tr>
        <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
          Channel
        </th>
      </tr>
      </thead>
      <tbody class="text-sm divide-y divide-slate-200">
      <tr>
        <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
          <%= @integration.notification_channel %>
        </td>
      </tr>
      </tbody>
    </table>
  <% else %>
    Nothing to do here, you're all good!
  <% end %>
<% end %>
