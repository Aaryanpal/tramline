<% if @integration.version_control? %>
  <div class="mb-8">
    <h1 class="text-2xl md:text-3xl text-slate-800 font-bold">Edit VCS Settings ✨</h1>
  </div>
  <%= form_with(model: [current_organization, @app, @integration], method: :patch) do |form| %>
    <div class="grid gap-5 md:grid-cols-2">
      <div>
        <%= form.label :active_code_repo, "Active Repository", class: "block text-sm font-medium mb-1" %>
        <%= form.select :active_code_repo,
                        options_for_select(
                          @channels.map { |chan| [chan[:full_name], { chan[:id] => chan[:full_name] }.to_json] },
                          @integration.active_code_repo
                        ),
                        {},
                        { class: "form-input w-full" } %>
      </div>

      <div>
        <%= form.label :working_branch, class: "block text-sm font-medium mb-1" %>
        <%= form.text_field :working_branch, class: "form-input w-full", placeholder: "eg. main or develop", required: true %>
      </div>

      <div class="mt-5">
        <%= form.submit 'Create', class: "btn bg-indigo-500 hover:bg-indigo-600 text-white" do %>
          <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
            <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z"/>
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

