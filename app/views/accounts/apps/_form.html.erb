<%= form_with(model: [current_organization, app]) do |form| %>
  <fieldset class="block">
    <legend><%= legend %></legend>
    <div class="field">
      <%= form.label :name, class: "label" %>
      <div class="control">
        <%= form.text_field :name, class: "input", required: true %>
      </div>
    </div>

    <div class="field">
      <%= form.label :description, class: "label" %>
      <div class="control">
        <%= form.text_area :description, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= form.label :bundle_identifier, class: "label" %>
      <div class="control">
        <%= form.text_field :bundle_identifier, class: "input", required: true, placeholder: "eg., com.clj.is.best" %>
      </div>
    </div>

    <div class="field">
      <%= form.label :build_number, class: "label" %>
      <div class="control">
        <%= form.number_field :build_number, class: "input", step: 1, min: 1, placeholder: "eg., your last versionCode", required: true %>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= form.submit 'Submit', class: "button is-link" %>
      </div>
    </div>
  </fieldset>
<% end %>