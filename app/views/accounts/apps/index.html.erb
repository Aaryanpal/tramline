<div class="sm:flex sm:justify-between sm:items-center mb-8">
  <!-- Left: Title -->
  <div class="mb-4 sm:mb-0">
    <h1 class="text-2xl md:text-3xl text-slate-800 font-bold">Apps âœ¨</h1>
  </div>


  <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">
    <button class="btn bg-indigo-500 hover:bg-indigo-600 text-white">
      <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
        <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z" />
      </svg>
      <span class="hidden xs:block ml-2">Add an App</span>
    </button>

  </div>
</div>

<% if @apps.exists? %>
  <h2>Apps</h2>

  <p>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Bundle Identifier</th>
      <th>Timezone</th>
    </tr>
    </thead>
    <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= link_to app.name, accounts_organization_app_path(current_organization, app) %></td>
        <td><%= app.description %></td>
        <td><%= app.bundle_identifier %></td>
        <td><%= app.timezone %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <p>
    <%= link_to "Create new", new_accounts_organization_app_path(current_organization) %>
  </p>
  </p>
<% else %>
  <p>Go to the
    <%= link_to "new app page", new_accounts_organization_app_path(current_organization) %>
    to create an app and configure their integrations.
  </p>
<% end %>